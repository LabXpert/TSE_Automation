<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TSE_Automation.ViewModels"
        xmlns:views="using:TSE_Automation.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TSE_Automation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="TSE_Automation">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Üst Bar -->
        <Border Background="#34495E" 
                Height="50" 
                VerticalAlignment="Top" 
                ZIndex="1">
            <Grid>
                <!-- Hamburger Menü Butonu ve Menü Yazısı -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center">
                    <Button x:Name="MenuToggleButton"
                            Width="50" 
                            Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MenuToggleButton_Click">
                        <StackPanel VerticalAlignment="Center">
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Text="Menü" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Başlık -->
                <TextBlock Text="LabXpert" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- SplitView -->
        <SplitView x:Name="MainSplitView" 
                   IsPaneOpen="False" 
                   DisplayMode="Overlay" 
                   OpenPaneLength="250" 
                   Margin="0,50,0,0">
            
            <!-- Sol Menü Paneli -->
            <SplitView.Pane>
            <Border Background="#2C3E50" CornerRadius="0">
                <StackPanel Orientation="Vertical" Margin="10">
                    
                    <!-- Menü Başlığı -->
                    <TextBlock Text="Deney Raporları" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,10,0,20"
                               HorizontalAlignment="Center"/>
                    
                    <!-- Deney Ekle Butonu -->
                    <Button x:Name="DeneyEkleButton"
                            Content="Deney Ekle"
                            Background="#34495E"
                            Foreground="White"
                            Margin="0,5"
                            Padding="10"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            BorderThickness="0"
                            CornerRadius="5"
                            Click="DeneyEkleButton_Click">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <!-- Deney Raporla Butonu -->
                    <Button x:Name="DeneyRaporlaButton"
                            Content="Deney Raporla"
                            Background="#34495E"
                            Foreground="White"
                            Margin="0,5"
                            Padding="10"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            BorderThickness="0"
                            CornerRadius="5"
                            Click="DeneyRaporlaButton_Click">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <!-- Deney Sil/Düzenle Butonu -->
                    <Button x:Name="DeneySilDuzenleButton"
                            Content="Deney Sil/Düzenle"
                            Background="#34495E"
                            Foreground="White"
                            Margin="0,5"
                            Padding="10"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            BorderThickness="0"
                            CornerRadius="5"
                            Click="DeneySilDuzenleButton_Click">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#3498DB"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                </StackPanel>
            </Border>
        </SplitView.Pane>
        
        <!-- Ana İçerik Alanı -->
        <SplitView.Content>
            <Border Background="#ECF0F1">
                <ContentControl x:Name="MainContentControl">
                    <!-- Varsayılan içerik -->
                    <TextBlock Text="{Binding Greeting}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="20"
                               Foreground="#2C3E50"/>
                </ContentControl>
            </Border>
        </SplitView.Content>
        
            </SplitView>
    </Grid>

</Window>
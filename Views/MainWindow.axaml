<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TSE_Automation.ViewModels"
        xmlns:views="using:TSE_Automation.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TSE_Automation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="TSE_Automation">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Üst Bar -->
        <Border Background="#C0392B" 
                Height="50" 
                VerticalAlignment="Top" 
                ZIndex="1">
            <Grid>
                <!-- Hamburger Menü Butonu ve Menü Yazısı -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center">
                    <Button x:Name="MenuToggleButton"
                            Width="50" 
                            Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MenuToggleButton_Click">
                        <StackPanel VerticalAlignment="Center">
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                            <Rectangle Width="20" Height="3" Fill="White" Margin="0,2"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#A93226"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <TextBlock Text="Menü" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Başlık -->
                <TextBlock Text="LabXpert" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- SplitView -->
        <SplitView x:Name="MainSplitView" 
                   IsPaneOpen="False" 
                   DisplayMode="Overlay" 
                   OpenPaneLength="280" 
                   Margin="0,50,0,0">
            
            <!-- Sol Menü Paneli -->
            <SplitView.Pane>
                <Border Background="#2C3E50">
                    <StackPanel Orientation="Vertical" Margin="20">
                        
                        <!-- Menü Başlığı -->
                        <Border Background="#E74C3C" 
                                CornerRadius="8" 
                                Padding="16,12" 
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="🧪 Deney Raporları" 
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Deney Ekle Butonu -->
                        <Button x:Name="DeneyEkleButton"
                                Background="#C0392B"
                                Foreground="White"
                                Margin="0,8"
                                Padding="15,12"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontWeight="SemiBold"
                                Click="DeneyEkleButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Deney Ekle" FontSize="14"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Deney Raporla Butonu -->
                        <Button x:Name="DeneyRaporlaButton"
                                Background="#C0392B"
                                Foreground="White"
                                Margin="0,8"
                                Padding="15,12"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontWeight="SemiBold"
                                Click="DeneyRaporlaButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Deney Raporla" FontSize="14"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Deney Sil/Düzenle Butonu -->
                        <Button x:Name="DeneySilDuzenleButton"
                                Background="#C0392B"
                                Foreground="White"
                                Margin="0,8"
                                Padding="15,12"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontWeight="SemiBold"
                                Click="DeneySilDuzenleButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Deney Sil/Düzenle" FontSize="14"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Firma Ekle Butonu - YENİ -->
                        <Button x:Name="FirmaEkleButton"
                                Background="#C0392B"
                                Foreground="White"
                                Margin="0,8"
                                Padding="15,12"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontWeight="SemiBold"
                                Click="FirmaEkleButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏢" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Firma Ekle" FontSize="14"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                    </StackPanel>
                </Border>
            </SplitView.Pane>
            
            <!-- Ana İçerik Alanı -->
            <SplitView.Content>
                <Border Background="#ECF0F1">
                    <ContentControl x:Name="MainContentControl">
                        <!-- Karşılama Ekranı -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   MaxWidth="400">
                            
                            <!-- Ana İkon -->
                            <Border Width="100" Height="100" 
                                    Background="#E74C3C"
                                    CornerRadius="50" 
                                    Margin="0,0,0,20">
                                <TextBlock Text="🧪" 
                                           FontSize="40" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Hoş Geldin Metni -->
                            <TextBlock Text="{Binding Greeting}" 
                                       HorizontalAlignment="Center"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Laboratuvar deney yönetim sisteminize hoş geldiniz" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,30"/>
                            
                        </StackPanel>
                    </ContentControl>
                </Border>
            </SplitView.Content>
            
        </SplitView>
        
    </Grid>

</Window>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TSE_Automation.ViewModels"
             x:Class="TSE_Automation.Views.FirmaEkleView"
             x:DataType="vm:FirmaEkleViewModel">

    <!-- Global Stiller - DeneyEkle ile uyumlu -->
    <UserControl.Styles>
        <!-- TextBox Stilleri -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#3498db"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="#95a5a6"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid RowDefinitions="Auto,Auto,Auto,*" Margin="20">
            
            <!-- Başlık - DeneyEkle ile aynı stil -->
            <Border Grid.Row="0" 
                    Background="#f8f9fa" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,0,0,20">
                <TextBlock Text="Firma Ekleme Formu" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#2c3e50"/>
            </Border>

            <!-- Ana Form Alanı -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BoxShadow="0 2 8 0 #20000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="FİRMA BİLGİLERİ" 
                              FontWeight="Bold" 
                              FontSize="14" 
                              Foreground="#34495e" 
                              Margin="0,0,0,10"/>

                    <!-- Form Alanları Grid -->
                    <Grid ColumnDefinitions="1*,20,1*" RowDefinitions="Auto,20,Auto,20,Auto,20,Auto">
                        
                        <!-- Firma Adı -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="8">
                            <TextBlock Text="Firma Adı *" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="FirmaAdiTextBox"
                                     Height="35"
                                     Watermark="Firma adını giriniz"/>
                        </StackPanel>

                        <!-- Telefon -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Spacing="8">
                            <TextBlock Text="Telefon *" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="TelefonTextBox"
                                     Height="35"
                                     Watermark="0555 123 45 67"/>
                        </StackPanel>

                        <!-- Vergi Numarası -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Spacing="8">
                            <TextBlock Text="Vergi Numarası" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="VergiNumarasiTextBox"
                                     Height="35"
                                     Watermark="1234567890"/>
                        </StackPanel>

                        <!-- Yetkili -->
                        <StackPanel Grid.Column="2" Grid.Row="2" Spacing="8">
                            <TextBlock Text="Yetkili Kişi *" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="YetkiliTextBox"
                                     Height="35"
                                     Watermark="Yetkili kişi adı"/>
                        </StackPanel>

                        <!-- E-mail -->
                        <StackPanel Grid.Column="0" Grid.Row="4" Spacing="8">
                            <TextBlock Text="E-mail" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="EmailTextBox"
                                     Height="35"
                                     Watermark="ornek@firma.com"/>
                        </StackPanel>

                        <!-- Website -->
                        <StackPanel Grid.Column="2" Grid.Row="4" Spacing="8">
                            <TextBlock Text="Website" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="WebsiteTextBox"
                                     Height="35"
                                     Watermark="www.firma.com"/>
                        </StackPanel>

                        <!-- Adres -->
                        <StackPanel Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" Spacing="8">
                            <TextBlock Text="Adres" FontWeight="Medium" Foreground="#2c3e50"/>
                            <TextBox x:Name="AdresTextBox"
                                     Height="80"
                                     Watermark="Firma adresini giriniz"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Butonlar -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" 
                        Spacing="15"
                        Margin="0,0,0,20">
                
                <Button x:Name="TemizleButton"
                        Content="TEMİZLE"
                        Width="120"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#95a5a6"
                        Foreground="White"
                        CornerRadius="8"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#7f8c8d"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#6c7b7d"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <Button x:Name="KaydetButton"
                        Content="KAYDET"
                        Width="120"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#27ae60"
                        Foreground="White"
                        CornerRadius="8"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#229954"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#1e8449"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

            <!-- Son Eklenen Firmalar -->
            <Border Grid.Row="3" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    BoxShadow="0 2 8 0 #20000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="SON EKLENEN FİRMALAR" 
                              FontWeight="Bold" 
                              FontSize="14" 
                              Foreground="#34495e"/>
                    
                    <!-- Firmalar Listesi -->
                    <ItemsControl ItemsSource="{Binding SonEklenenFirmalar}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="{Binding FirmaAdi}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"
                                                       Foreground="#2c3e50"/>
                                            <StackPanel Orientation="Horizontal" Spacing="15">
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="Yetkili:" Foreground="#7f8c8d" FontSize="12"/>
                                                    <TextBlock Text="{Binding Yetkili}" 
                                                               FontSize="12"
                                                               Foreground="#7f8c8d"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="Tel:" Foreground="#7f8c8d" FontSize="12"/>
                                                    <TextBlock Text="{Binding Telefon}" 
                                                               FontSize="12"
                                                               Foreground="#7f8c8d"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding EklenmeTarihi, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                                   FontSize="11"
                                                   Foreground="#95a5a6"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>